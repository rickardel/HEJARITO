@model ICollection<HEJARITO.Models.Document>


<table class="table table-striped table-bordered" id="coursedocumentstablex" cellspacing="0">
    <thead>
        <tr>
            <th>Kursdokument</th>
        </tr>
    </thead>
    <tbody class="slist" id="CourseDocumentsList">
        @foreach (var doc in Model.Where(d => d.ActivityId == null).Where(d => d.ModuleId == null))
        {
            <tr>
                <td>
                    @Html.ActionLink("Ladda ner", "Download", "Documents", new { Id = doc.Id }, new { @class = "btn btn-success btn-xs" })
                    <span>@doc.UploadDate : "@doc.Name"</span>
                </td>
            </tr>
        }

    </tbody>
</table>