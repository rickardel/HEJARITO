@model HEJARITO.Models.Course

@{
    ViewBag.Title = "Details";
}

@if (User.Identity.IsAuthenticated) //TM 2018-03-12 16:37
{
    <h2>Details</h2>

    <div>
        <h4>Course</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StartDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EndDate)
            </dd>

        </dl>
    </div>
    <p>
        @if (User.IsInRole("Teacher")) //TM 2018-03-12 16:37
        {
        @Html.ActionLink("Course Editor", "CourseEditor", new { id = Model.Id }) |
        @Html.ActionLink("Edit | ", "Edit", new { id = Model.Id })
        }
        @Html.ActionLink("Back to List", "Index")
    </p>
    </dl>
</div>



<div>
    <h4>Modules</h4>

    <div id="divCourseModules">
        @{ Html.RenderPartial("_CourseModules", Model.Modules.OrderBy(m => m.StartDate).ToList()); }
    </div>

</div>

<div>
    <h4>Students</h4>
    <ul class="slist" id="CourseStudentList">
        @foreach (var student in Model.ApplicationUsers)
        {
            <li>
                <strong>
                    @student.FirstName @student.LastName
                </strong>
                @student.Email
                ( @student.PhoneNumber )
            </li>
        }
    </ul>
</div>
