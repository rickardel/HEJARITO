@model IEnumerable<HEJARITO.Models.Document>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>

        </th>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UploadDate)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.Activity != null)
                {
                    @Html.ActionLink(item.Activity.Name, "Details", "Activities", new { id = item.ActivityId }, new { @class = "btn btn-xs btn-default" })

                }
                else
if (item.Module != null)
                {
                    @Html.ActionLink(item.Module.Name, "Details", "Modules", new { id = item.ModuleId }, new { @class = "btn btn-xs btn-default" })

                }
                else
if (item.Course != null)
                {
                    @Html.ActionLink(item.Course.Name, "Details", "Courses", new { id = item.CourseId }, new { @class = "btn btn-xs btn-default" })
                }
                <br/>
                @Html.DisplayFor(modelItem => item.DocumentType)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.UploadDate)
            </td>

            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-xs btn-default" })
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-xs btn-default" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-xs btn-default" })
            </td>
        </tr>
    }

</table>
