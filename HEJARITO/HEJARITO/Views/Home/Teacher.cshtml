@model HEJARITO.Models.TeacherViewModel

@{
    ViewBag.Title = "Lärare";
}

@if (User.IsInRole("Teacher")) //TM 2018-03-12 15:01
{
    <h2>Lärare</h2>

    @*JG 2018-03-12: This page uses Bootstrap 3 Datatables functionality: https://datatables.net/.
        Input comes in the form of a "TecherViewModel" with the lists Activities, Courses and Users.*@

    <h2>Denna veckas aktiviteter</h2>
    <table width="100%" class="table table-striped table-bordered" id="activitiestable" cellspacing="0">
        <thead>
            <tr>
                <th>Namn</th>
                <th>Aktivitetstyp</th>
                <th>Beskrivning</th>
                <th>Startdatum</th>
                <th>"Deadline"</th>
                <th>Slutdatum</th>
                <th>Detaljer</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Namn</th>
                <th>Aktivitetstyp</th>
                <th>Beskrivning</th>
                <th>Startdatum</th>
                <th>"Deadline"</th>
                <th>Slutdatum</th>
                <th>Detaljer</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model.Activities)
            {

                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.ActivityType.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.DeadlineDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
                </tr>

            }
        </tbody>
    </table>

    <h2>Kurser</h2>
    <table width="100%" class="table table-striped table-bordered" id="coursestable" cellspacing="0">
        <thead>
            <tr>
                <th>Namn</th>
                <th>Beskrivning</th>
                <th>Startdatum</th>
                <th>Slutdatum</th>
                <th>Detaljer</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Namn</th>
                <th>Beskrivning</th>
                <th>Startdatum</th>
                <th>Slutdatum</th>
                <th>Detaljer</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model.Courses)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Kontaktlista</h2>
    <table width="100%" class="table table-striped table-bordered" id="contactstable" cellspacing="0">
        <thead>
            <tr>
                <th>Förnamn</th>
                <th>Efternamn</th>
                <th>Detaljer</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Förnamn</th>
                <th>Efternamn</th>
                <th>Detaljer</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
                </tr>
            }
        </tbody>
    </table>

    @*JG 2018-03-12: Script for rendering the tables.*@
    @section Scripts
    {
        <script src="~/Scripts/teachertables.js"></script>
    }
}