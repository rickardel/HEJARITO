@model HEJARITO.Models.TeacherViewModel

@{
    ViewBag.Title = "Teacher";
}

<h2>Teacher</h2>

<h2>Events</h2>
<table width="100%" class="table table-striped table-bordered" id="eventsstable" cellspacing="0">
    <thead>
        <tr>
            <th>Name</th>
            <th>Activity Type</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>Deadline Date</th>
            <th>End Date</th>
            <th>Details</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Activity Type</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>Deadline Date</th>
            <th>End Date</th>
            <th>Details</th>
        </tr>
    </tfoot>
    @foreach (var item in Model.Activities)
    {
        <tbody>
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ActivityType.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.DeadlineDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
            </tr>
        </tbody>
    }
</table>

<h2>Courses</h2>
<table width="100%" class="table table-striped table-bordered" id="coursestable" cellspacing="0">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Details</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Details</th>
        </tr>
    </tfoot>
    @foreach (var item in Model.Courses)
    {
        <tbody>
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
            </tr>
        </tbody>
    }
</table>

<h2>Contacts</h2>
<table width="100%" class="table table-striped table-bordered" id="coursestable" cellspacing="0">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </tfoot>
    @foreach (var item in Model.Users)
    {
        <tbody>
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
            </tr>
        </tbody>
    }
</table>
