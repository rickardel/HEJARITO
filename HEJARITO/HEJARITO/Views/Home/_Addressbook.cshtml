@model HEJARITO.Models.TeacherViewModel

@* //TM 2018-03-22 14:02 Beautifying genom tabellkolumnernas enhetliga bredd m.h.a. Bootstrapklasserna "col-md-X"*@
@if (ViewBag.TableSizeContacts == "large")
{
    <table class="table table-striped table-bordered" id="contactstable-large" cellspacing="0">
        <thead>
            <tr>
                <th class="col-md-3">@Html.DisplayNameFor(model => model.Users.First().FirstName)</th>
                <th class="col-md-3">@Html.DisplayNameFor(model => model.Users.First().LastName)</th>
                <th class="col-md-4">@Html.DisplayNameFor(model => model.Users.First().Email)</th>
                <th class="col-md-2">Telefonnummer</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td><a href="mailto:@Html.DisplayFor(modelItem => item.Email)">@Html.DisplayFor(modelItem => item.Email)</a></td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                </tr>
            }
        </tbody>
    </table>
}

