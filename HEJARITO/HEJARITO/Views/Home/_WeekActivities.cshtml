@model HEJARITO.Models.TeacherViewModel
  
@if (ViewBag.TableSizeActivities == "large")
{
    <table class="table table-striped table-bordered" id="activitiestable-large" cellspacing="0">

        @* //TM 2018-03-22 14:02 Beautifying genom tabellkolumnernas enhetliga bredd m.h.a. Bootstrapklasserna "col-md-X"*@
        <thead>
            <tr>
                <th class="col-md-1">@Html.DisplayNameFor(model => model.Activities.First().StartDate)</th>
                <th class="col-md-1">@Html.DisplayNameFor(model => model.Activities.First().EndDate)</th>
                <th class="col-md-2">@Html.DisplayNameFor(model => model.Activities.First().ActivityTypeId)</th>
                <th class="col-md-7">@Html.DisplayNameFor(model => model.Activities.First().Name)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Activities)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.ActivityType.Name)</td>
                    <td>@Html.ActionLink(item.Name, "Details", "Activities", new { Id = item.Id}, "")</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (ViewBag.TableSizeActivities == "small")
{
    <table class="table table-striped table-bordered" id="activitiestable-small" cellspacing="0">

